                        <div class="card">

                            <div class="card-block">

                                <form>

                                    <div class="row">

                                        <div class="col-md-3">

                                            <div class="md-form">

                                                <input type="text" id="txt_firstname" class="form-control">
                                                <label for="txt_firstname" class="active">نام</label>

                                            </div>

                                        </div>

                                        <div class="col-md-3">

                                            <div class="md-form">

                                                <input type="text" id="txt_lastname" class="form-control">
                                                <label for="txt_lastname" class="active">نام خانوادگی</label>

                                            </div>

                                        </div>

                                        <div class="col-md-3">

                                            <div class="md-form">

                                                <input type="text" id="txt_en_firstname" class="form-control">
                                                <label for="txt_en_firstname" class="active">FirstName</label>

                                            </div>

                                        </div>

                                        <div class="col-md-3">

                                            <div class="md-form">

                                                <input type="text" id="txt_en_lastname" class="form-control">
                                                <label for="txt_en_lastname" class="active">LastName</label>

                                            </div>

                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-2">

                                            <select class="mdb-select">

                                                <option value="0" selected>مرد</option>
                                                <option value="1">زن</option>

                                            </select>

                                            <label>جنسیت</label>

                                        </div>

                                        <div class="col-md-2">

                                            <select class="mdb-select">

                                                <option value="0" selected>1 سال</option>
                                                <option value="1">2 سال</option>
                                                <option value="2">3 سال</option>
                                                <option value="3">4 سال</option>
                                                <option value="4">5 سال</option>
                                                <option value="5">6 سال</option>
                                                <option value="6">7 سال</option>
                                                <option value="7">8 سال</option>
                                                <option value="8">9 سال</option>
                                                <option value="9">10 سال</option>
                                                <option value="10">11 سال</option>
                                                <option value="11">12 سال</option>
                                                <option value="12">13 سال</option>
                                                <option value="13">14 سال</option>
                                                <option value="14">15 سال</option>
                                                <option value="15">16 سال</option>
                                                <option value="16">17 سال</option>
                                                <option value="17">18 سال</option>
                                                <option value="18">19 سال</option>
                                                <option value="19">20 سال</option>
                                                <option value="20">21 سال</option>
                                                <option value="20">22 سال</option>

                                            </select>

                                            <label>سن</label>

                                        </div>

                                        <div class="col-md-2">

                                            <select class="mdb-select">

                                                <option value="0" selected>ایران</option>
                                                <option value="1">آلمان</option>
                                                <option value="2">ایتالیا</option>

                                            </select>

                                            <label>کشور</label>

                                        </div>

                                        <div class="col-md-3">

                                            <div class="md-form">

                                                <input id="txt_phone" type="text" class="form-control">
                                                <label for="txt_phone">شماره تماس</label>

                                            </div>

                                        </div>

                                        <div class="col-md-3">

                                            <div class="md-form">

                                                <input id="txt_code_melli" type="text" class="form-control">
                                                <label for="txt_code_melli">کد ملی</label>

                                            </div>

                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-4 ">

                                            <fieldset class="form-group ">

                                                <input type="checkbox" class="filled-in" id="chk_foreigner">
                                                <label for="chk_foreigner">اتباع خارجی</label>

                                            </fieldset>

                                        </div>


                                        <div class="collapse" id="collapse_passport">

                                            <div class="col-md-4">

                                                <div class="md-form">

                                                    <input type="text" class="form-control flightDestination">
                                                    <label>شماره پاسپورت</label>

                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                    <!--Body-->
                                </form>

                            </div>

                        </div>

                        @{Html.RenderPartial("_Notify");}

                        <div class="page-controls">

                            <a href="/Book/Payment" class="btn btn-primary btn-lg">مشاهده فاکتور و پرداخت هزینه</a>

                            <a href="#" class="btn btn-blue-grey btn-lg">بازگشت</a>

                        </div>

                    </div>

                    <div class="col-md-4 booking-list">

                        @{ Html.RenderPartial("BookDetail");}

                        <!--Card Success-->
                        @{ Html.RenderPartial("_CostGuarantee");}
                        <!--/.Card Success-->

                        @{ Html.RenderPartial("_GainedScore");}

                    </div>

                    

                </div>

            </section>


        </div>
        <!--/Main container-->

    </main>



