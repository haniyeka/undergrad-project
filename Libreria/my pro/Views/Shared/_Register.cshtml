
<div class="modal fade modal-ext" id="modal-register" tabindex="-1" role="dialog" aria-labelledby="modal_register_label" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <!--Content-->
        <div class="modal-content">

            <!--Header-->
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">

                    <span aria-hidden="true">&times;</span>

                </button>

                <h3 id="modal_register_label">
                    <i class="fa fa-user"></i> ثبت نام
                </h3>

            </div>

            <!--Body-->
            <div class="modal-body">
                <form method="post" action="/UserAccount/Register" class="Form">

                    <div class="md-form">

                        <i class="fa fa-user-plus prefix"></i>

                        <input type="text" id="txt_register_username" name="Fname" class="form-control requiredInputs">

                        <label for="txt_register_username">نام</label>

                    </div>
                    <div class="md-form">

                        <i class="fa fa-user-plus prefix"></i>

                        <input type="text" id="txt_register_username" name="Lname" class="form-control requiredInputs">

                        <label for="txt_register_username">نام خانوادگی</label>

                    </div>
                    <div class="md-form">

                        <i class="fa fa-envelope prefix"></i>

                        <input type="text" id="txt_register_email" name="EmailAddress" class="form-control requiredInputs isEmail">

                        <label for="txt_register_username">آدرس پست الکترونیکی</label>

                    </div>
                    <div class="md-form">

                        <i class="fa fa-user prefix"></i>

                        <input type="text" id="txt_register_username" name="Username" class="form-control requiredInputs isUsername">

                        <label for="txt_register_username">نام کاربری شما</label>

                    </div>
                    <div class="md-form">

                        <i class="fa fa-lock prefix"></i>

                        <input type="password" id="txt_register_password" name="Password" class="form-control requiredInputs" />

                        <label for="txt_register_password">رمز عبور</label>

                    </div>


                    <div class="md-form">
                        <span>
                            <i class="fa fa-th-list prefix"></i>
                        </span>
                        <div style="padding-right:50px">
                            <select class="mdb-select requiredInputs" name="MemberType">
                                <option value="" disabled selected>  نوع کاربری</option>
                                <option value="1"> کاربر عادی </option>
                                <option value="2"> فروشگاه</option>
                            </select>
                        </div>
                    </div>
                    
                    <br />
                    <div class="text-xs-center">
                        <span style="color:indianred; text-align:center;" id="validateError"></span><br /><br />
                        <button class="btn btn-primary btn-lg submitbuttonRegister">ثبت نام</button>
                    </div>
                </form>
            </div>
            <!--Footer-->
            <div class="modal-footer">

                <div class="options">

                    <p>
                        <a href="#" id="gotologin">اگر عضو هستید وارد شوید</a>
                    </p>

                </div>

                <button type="button" class="btn btn-default" data-dismiss="modal">بستن صفحه</button>

            </div>

        </div>
        <!--/.Content-->

    </div>

</div>
