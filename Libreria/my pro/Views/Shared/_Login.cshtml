
<div class="modal fade modal-ext" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modal_login_label" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <!--Content-->
        <div class="modal-content">

            <!--Header-->
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">

                    <span aria-hidden="true">&times;</span>

                </button>

                <h3 id="modal_login_label">
                    <i class="fa fa-user"></i> ورود کاربر
                </h3>

            </div>

            <!--Body-->
            <div class="modal-body">
                <form method="post" action="/UserAccount/Login" class="Form">

                    <div class="md-form">

                        <i class="fa fa-envelope prefix"></i>

                        <input type="text" id="txt_login_username" name="username" class="form-control requiredInputs" >

                        <label for="txt_login_username">نام کاربری</label>

                    </div>

                    <div class="md-form">

                        <i class="fa fa-lock prefix"></i>

                        <input type="password" id="txt_login_password" name="password" class="form-control requiredInputs">

                        <label for="txt_login_password">رمز عبور</label>

                    </div>

                    <div class="text-xs-center">
                        <span style="color:indianred; text-align:center;" id="submitError"></span><br /><br />
                        <button type="submit" class="btn btn-primary btn-lg submitbuttonLogin" >ورود کاربر</button>

                    </div>

                </form>
                </div>

                <!--Footer-->
                <div class="modal-footer">

                    <div class="options">

                        <p>
                            <a href="#" id="gotoregister">اگز عضو نیستید ثبت نام کنید</a>
                        </p>

                        <p>
                            <a href="#">رمز عبور را فراموش کردید؟ </a>
                        </p>

                    </div>

                    <button type="button" class="btn btn-default formbutton" data-dismiss="modal">بستن صفحه ورود</button>

                </div>

            </div>
        <!--/.Content-->

    </div>

</div>
